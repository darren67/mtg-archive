<p id="notice"><%= notice %></p>

<h1>Listing Decks</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Deck Name</th>
      <th colspan="4"></th>
    </tr>
        <tr>
      <th>Deck Description</th>
      <th>Deck Type</th>
      <th>Casting Cost</th>
      <th>Set Name</th>
      <th colspan="4"></th>
    </tr>
  </thead>


    <tbody>
    <% @decks.each do |deck| %>
      <tr>
        <td><%= deck.deckName %></td>
        <td><%= deck.deckDescription %></td>
        <td><%= deck.deckType %></td>
        <td><%= deck.dateCreated %></td>
        <td><%= deck.totalCards %></td>
        <td><%= link_to 'Show', deck %></td>
        <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
         <td><%= button_to "delete", deck_path(:id => deck.id), :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<br>
<button type="button" class="btn btn-default btn-lg btn-block"><%= link_to 'New Deck', new_deck_path %></button>


