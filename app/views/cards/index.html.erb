<p id="notice"><%= notice %></p>

<h1>Listing Cards</h1>
<button type="button" class="btn btn-default btn-lg btn-block"><%= link_to 'New Card', new_card_path %></button>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Card ID</th>
      <th>Card Name</th>
      <th>Card Colour</th>
      <th>Card Type</th>
      <th>Set Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.cardID %></td>
        <td><%= card.cardName %></td>
        <td><%= card.cardColour %></td>
        <td><%= card.cardType %></td>
        <td><%= card.setName %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
         <td><%= button_to "delete", card_path(:id => card.id), :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>


